<div class='row'>
  <div class="col-lg-3 ">
    <div class="list-group list-group-transparent mb-4">

      <%if grant_access("ability_to_verify_ads", current_user)%>
      <%= link_to '/settings/section?section=awaiting_ads', id: 'awaiting_ads-nav', class: "list-group-item list-group-item-action small mb-1", style:'font-weight:normal;', remote: true  do%>
      <i class="far fa-flag" style="vertical-align:-3px;"></i> <%=t :awaiting_advertisements%>
      <%end%>
      <%end%>

      <%if grant_access("ability_to_change_categories", current_user)%>
      <%= link_to '/settings/section?section=categories', id: 'categories-nav', class: "list-group-item list-group-item-action small mb-1", style:'font-weight:normal;', remote: true  do%>
      <i class="far fa-folder" style="vertical-align:-3px;"></i> <%=t :categories%>
      <%end%>
      <%end%>

      <%if grant_access("ability_to_change_faqs", current_user)%>
      <%= link_to '/settings/section?section=faqs', id: 'faq-nav',class: "list-group-item list-group-item-action small mb-1", style:'font-weight:normal;', remote: true do%>
      <i class="fe fe-help-circle" style="vertical-align:-3px;"></i> <%=t :faqs%>
      <%end%>
      <%end%>

      <%if grant_access("ability_to_change_roles", current_user)%>
      <%= link_to '/settings/section?section=roles', id: 'roles-nav',class: "list-group-item list-group-item-action small mb-1", style:'font-weight:normal;', remote: true do%>
      <i class="fe fe-user" style="vertical-align:-3px;"></i> <%=t :roles%>
      <%end%>
      <%end%>

      <%if grant_access("ability_to_assign_roles", current_user)%>
      <%= link_to '/settings/section?section=assignments', id: 'assignments-nav',class: "list-group-item list-group-item-action small mb-1", style:'font-weight:normal;', remote: true do%>
      <i class="fe fe-user-check" style="vertical-align:-3px;"></i> <%=t :assignments%>
      <%end%>
      <%end%>

      <%= link_to '/settings/section?section=slides', id: 'slides-nav',class: "list-group-item list-group-item-action small mb-1", style:'font-weight:normal;', remote: true do%>
      <i class="fe fe-fast-forward" style="vertical-align:-3px;"></i> <%=t :slides%>
      <%end%>
    </div>
  </div>
  <div class="col-md-9 order-lg-1">
    <div class="card">
      <div id='settings-detail'></div>
      <div class='mb-4'></div>
    </div>
  </div>
</div>
